/*------------------------------------------------
  Pre Header
------------------------------------------------*/
/*
@name Pre-header
@description test
@markup
  <div class="pre-header">test</div>
*/


.pre-header
  container()
  justifize()
  padding-y 15px
  font-size 12px
  color #8A8D94

  +xs()
    hide()
  
  //simple bricks

  &__icon
    font-size 13px
    color #848994

  &__link   
    color inherit
    text-decoration none

    &:hover
      text-decoration underline

    *
      text-decoration inherit


  // components

  &__shell  
    background-color #f5f7f8

  
  &__section--lt
    hLine baseline 35px


  &__section--rt
    hLine baseline 25px


  &__social
    hLine baseline 20px

  
  &__info
    hLine baseline 5px





/*------------------------------------------------
  Header (main part)
------------------------------------------------*/
.header
  $header-bg-c = #fff
  $header-border-c = #e5e8eb
  container()
  color #6E7179
  font-weight 100
  position relative

  *
    font-weight inherit
    color inherit

  &__shell
    background-color $header-bg-c
    border $header-border-c
    border-x none


  /*LOGO component*/
  &__logo
    ctr y
    hLine middle 15px
    text-decoration none
    font-size 30px
    font-family $brand-f
    

    &__icon
      size 50px
      position relative
      border-radius 50%
      background-color #285FDB
      background-image linear-gradient(to top, #28DBC4 0%, #285FDB 100%)
      font-size 28px
      color $header-bg-c

      &:before
        content 'S'
        ctr()





/*Navigation component*/
.nav
  $link-hover-c = #285FDB
  $border-c = #eef0f2

  -link()
    display block
    text-decoration none


  display inline-block
  text-align left
  hLine top
  font: 100 16px $brand-f
  color #6E7179


  &__shell
    background-color #fff
    position relative
    text-align right


  &__link
    -link()
    position relative
    height 80px
    ctr-at @height
    padding-x 30px
    margin -1px 0 -1px -1px
    border $border-c
    background-color #fff
    overflow hidden

    //active label
    &:before
      pb left top
      size 100% 3px
      background-color #285fdb
      transform translateY(-100%)
      trans translate

    //show active label
    &:hover,
    &:focus,
    *:hover > &
      
      &:before
        transform translateY(0)

    //hide bottom border
    *.has-dropdown:hover > &
      border-bottom 0



  &__dropdown
    z-index -1
    absolute left -1px top 100%
    transform translateY(-100%)
    trans transform
    font: 300 15px $base-f
    color #8A8D94

    &__shell
      position relative

    &__shell:hover &
      transform translateY(0)


    &__link
      -link()
      width 210px
      padding 15px 30px
      background-color #fff
      font: 300 15px $base-f
      text-decoration none
      border $border-c
      margin-bottom -1px
      trans()

      &:hover,
      &:focus,
      *:hover > &  //only for top level unit
        background-color #fbfcfd
        color $link-hover-c

    // sub-dropdown (can appear left or right, support infinite deeping level)
    &--sub
      position absolute
      top 0
      display none

      &__shell
        position relative

      &__shell:hover > &
        display block

      &--L
        right 100%
        margin-right -1px

      &--R
        left 100%
        margin-left -1px


  //full width dropdown
  &__mega-dropdown  
    z-index -1
    absolute left right top 100%
    transform translateY(-105%)
    trans transform
    background-color #FFF
    border #E5E8EB
    border-radius 0px 0px 4px 4px
    box-shadow 0 1px 2px rgba(138, 141, 148, 0.1)
    padding 15px
    font: 300 15px $base-f
    
    &__shell:hover &
      transform translateY(0)

    .flexbox &
      fLine space-between stretch

    &__unit
      width: 25%
      padding 15px

      .no-flexbox &
        display table-cell


      &__title
        margin-bottom 30px
        color #3C414C
        font: 100 20px $brand-f

      &__link
        -link()
        padding-y 15px
        border-bottom 1px solid $border-c

        &:hover
          color $link-hover-c

        *:last-child > &
          border-bottom none
          padding-bottom 0


  //search form
  &__search
    absolute top 100% left 50%
    width: 100vw
    margin-left -50vw
    background-color #f5f7f8
    trans transform
    transform translateY(-100%)
    padding-y 25px

    .flexbox &
      fLine center center

    .no-flexbox &
      display table-cell
      vertical-align middle
      text-align center


    &.is-active
      transform translateY(0)
  

    //visible part
    &__label      
      test()

    &__input
      width 400px
      border none
      background none
      font-size 24px
      height 30px

      &:focus
        outline none


  //shopcart
  &__shopcart
    absolute top 100% left
    trans transform
    transform translateY(-100%)

    &.is-active
      transform translateY(0)

    &__label
      position relative


  
