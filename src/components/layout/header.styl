/*------------------------------------------------
  Pre Header
------------------------------------------------*/
/*
@name Pre-header
@description test
@markup
  <div class="pre-header">test</div>
*/


.pre-header
  container()
  justifize()
  padding-y 15px
  font-size 12px
  color #8A8D94

  +xs()
    hide()
  
  //simple bricks

  &__icon
    font-size 13px
    color #848994

  &__link   
    color inherit
    text-decoration none

    &:hover
      text-decoration underline

    *
      text-decoration inherit


  // components

  &__shell  
    background-color #f5f7f8

  
  &__section--lt
    hLine baseline 35px


  &__section--rt
    hLine baseline 25px


  &__social
    hLine baseline 20px

  
  &__info
    hLine baseline 5px





/*------------------------------------------------
  Header (main part)
------------------------------------------------*/
.header
  $header-bg-c = #fff
  $header-border-c = #e5e8eb
  container()
  color #6E7179
  font-weight 100
  position relative

  *
    font-weight inherit
    color inherit


  &__shell
    background-color $header-bg-c
    border $header-border-c
    border-x none


  /*LOGO component*/
  &__logo
    ctr y
    hLine middle 15px
    text-decoration none
    font-size 30px
    font-family $brand-f
    

    &__icon
      size 50px
      position relative
      border-radius 50%
      background-color #285FDB
      background-image linear-gradient(to top, #28DBC4 0%, #285FDB 100%)
      font-size 28px
      color $header-bg-c

      &:before
        content 'S'
        ctr()





/*Navigation component*/
.nav
  display inline-block
  text-align left
  hLine top
  font-size 16px
  font-family $brand-f


  &__shell
    background-color #fff
    position relative
    text-align right


  &__link
    display block
    position relative
    height 80px
    ctr-at @height
    padding-x 30px
    margin-left -1px
    border $border-c
    border-y none
    background-color #fff
    overflow hidden
    text-decoration none
    trans border-bottom-color

    &:before
      pb left top
      size 100% 3px
      background-color #285fdb
      transform translateY(-100%)
      trans translate

    &:hover,
    &:focus,
    &__shell:hover &
      border-bottom-color transparent
      &:before
        transform translateY(0)


  &__dropdown
    z-index -1
    absolute left top 100%
    transform translateY(-100%)
    trans transform

    &__shell
      position relative

    &__shell:hover &
      transform translateY(0)


    &__link
      display block
      width 210px
      min-height 50px
      padding-x 30px
      background-color #fff
      font-size 15px
      font-weight 300
      color #8A8D94 
      text-decoration none
      trans()
      border $border-c
      margin-bottom -1px

      .flexbox &
        fLine flex-start center

      .no-flexbox &
        padding-y 10px

      &:hover,
      &:focus,
      &__shell:hover > &  //only for top level unit
        background-color #fbfcfd
        color #285FDB

    // sub-dropdown (can appear left or right, support infinite deeping level)
    &--sub
      position absolute
      top 0
      display none

      &__shell
        position relative

      &__shell:hover > &
        display block

      &--L
        right 100%
        margin-right -1px

      &--R
        left 100%
        margin-left -1px


  //full width dropdown
  &__mega-dropdown  
    z-index -1
    absolute left right top 100%
    transform translateY(-105%)
    trans transform
    background-color #FFF
    border #E5E8EB
    border-radius 0px 0px 4px 4px
    box-shadow 0 1px 2px rgba(138, 141, 148, 0.1)
    
    &__shell:hover &
      transform translateY(0)


    &__unit

      &__title
        test()


      
